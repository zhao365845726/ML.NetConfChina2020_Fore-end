/* pages/shop/detail.wxss */

.banner-top {
  width: 100%;
  height: 752rpx;
  position: relative;
}

.banner-top image {
  height: 752rpx;
  width: 100%;
  object-fit: cover;
}

.slide-index {
  width: 68rpx;
  height: 42rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 200rpx 0px 0px 200rpx;
  line-height: 42rpx;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  position: absolute;
  right: 0;
  bottom: 16rpx;
  z-index: 9999;
}

.slide-index text {
  font-size: 30rpx;
}

.detail-head {
  width: 100%;
  min-height: 244rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 32rpx;
  padding-bottom: 32rpx;
}

.sale-head {
  height: 90rpx;
  margin-top: 16rpx;
}

.vip-title {
  color: #ff7622;
  font-size: 30rpx;
  line-height: 42rpx;
  vertical-align: top;
  margin-top: 38rpx;
}

.vip-price {
  font-size: 60rpx;
  color: #ff7622;
  line-height: 90rpx;
  vertical-align: top;
}

.sale-origin {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
  margin-top: 44rpx;
  vertical-align: top;
}

.sale-num {
  font-size: 24rpx;
  color: #999;
  margin-top: 44rpx;
  vertical-align: top;
  float: right;
}

.detail-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  line-height: 44rpx;
  margin-top: 12rpx;
}

.detail-stock {
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
  margin-top: 16rpx;
}

.slice {
  height: 20rpx;
  width: 100%;
  background: #f6f6f6;
}

.guess-box {
  width: 100%;
  background: #fff;
  position: relative;
  box-sizing: border-box;
  padding-bottom: 32rpx;
}

.guess-head {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 32rpx;
  padding-left: 32rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}

.guess-wrap {
  background: #fff;
  width: 100%;
  overflow-x: scroll;
  white-space: nowrap;
  /*-webkit-overflow-scrolling: touch;*/
  box-sizing: border-box;
  padding: 0 16rpx;
  overflow-y: hidden;
}

.product-comment {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 32rpx;
}

.comment-head {
  height: 50rpx;
  line-height: 48rpx;
}

.left-head {
  font-weight: bold;
  color: #333;
  font-size: 36rpx;
}

.right-head {
  color: #4e28d4;
  font-size: 26rpx;
}

.comment-box {
  margin-top: 32rpx;
}

.comment-left {
  width: 56rpx;
  display: inline-block;
  vertical-align: top;
}

.comment-right {
  width: 600rpx;
  display: inline-block;
  margin-left: 20rpx;
}

.comment-thumb {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  vertical-align: top;
}

.comment-nickname {
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #bbb;
}

.comment-text {
  margin-top: 14rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 44rpx;
}

.detail-model {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 32rpx 28rpx 0 28rpx;
}

.models-head {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  padding-left: 4rpx;
  margin-bottom: 16rpx;
}

.models-list {
  line-height: 90rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 0.5px solid #eee;
  box-sizing: border-box;
}

.models-list span {
  vertical-align: top;
}

.models-detail {
  line-height: 50rpx;
  max-width: 560rpx;
  margin-top: 20rpx;
}

.gray {
  color: #999;
  margin-right: 16rpx;
}

.detail-rich {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 32rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 52rpx;
}

.rich-head {
  line-height: 50rpx;
  font-weight: bold;
  height: 50rpx;
}

.guess-wrap {
  padding-left: 32rpx;
}

.detail-bottom {
  width: 100%;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}

.full-bottom {
  width: 100%;
  height: 98rpx;
  border-top: 32rpx solid #f6f6f6;
}

.fav-bto-n {
  width: 50rpx;
  height: 50rpx;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
  left: 48rpx;
}

.fav-bto {
  background-image: url(data:image/png;base64,);
}

.cart-bto {
  width: 50rpx;
  height: 50rpx;
  left: 146rpx;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.add-btn {
  width: 476rpx;
  height: 78rpx;
  line-height: 78rpx;
  color: #fff;
  background: #9c86e7;
  border-radius: 40rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  right: 30rpx;
}

.seckill-top {
  height: 166rpx;
  z-index: 1;
}

.position-box {
  position: relative;
  width: 100%;
  min-height: 244rpx;
  overflow: hidden;
}


.rich-wrap {
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.rich-wrap image {
  width: 100%;
}

.no-com {
  text-align: center;
  font-size: 30rpx;
  line-height: 40rpx;
}

.comment-photo {
  margin-top: 16rpx;
}

.comment-photo image {
  width: 140rpx;
  height: 140rpx;
  object-fit: cover;
  margin-right: 10rpx;
  margin-bottom: 4rpx;
}

.nm {
  margin-right: 0 !important;
}
